#!/bin/bash
while [ 1 -eq 1 ]
do
	sh jdzc_spider
	if [ $? -eq 0 ];then
		sleep 36000
		sh jdzc_spider
	else
		pid1=$(ps -A -o stat,pid,cmd |grep "url_spider" |grep -v grep |awk '{print $2}')
		pid2=$(ps -A -o stat,pid,cmd |grep "jdzc_spider" |grep -v grep |awk '{print $2}')
		pid3=$(ps -A -o stat,pid,cmd |grep "new_jdzc_spider" |grep -v grep |awk '{print $2}')
		kill -9 $pid1
		kill -9 $pid2
		kill -9 $pid3
		sleep 360
		continue
	fi
done
